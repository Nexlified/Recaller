# Development Environment Configuration for Recaller
# Copy this to .env for development

# Database Configuration
POSTGRES_USER=recaller
POSTGRES_PASSWORD=recaller
POSTGRES_DB=recaller

# Backend Configuration
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true

# CORS Configuration (for development - allows localhost frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID
CORS_ALLOW_CREDENTIALS=true

# MCP Server Configuration
MCP_SECRET_KEY=dev-mcp-secret-key-change-in-production
MCP_SERVER_PORT=8001

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Resource Configuration (for development)
MAX_CONCURRENT_REQUESTS=5
MAX_CONTEXT_LENGTH=2048