# Production Environment Configuration for Recaller
# Copy this to .env.production and customize for your deployment

# Database Configuration
POSTGRES_USER=recaller
POSTGRES_PASSWORD=change-this-strong-password-for-production
POSTGRES_DB=recaller

# Security Configuration - CHANGE THESE IN PRODUCTION
SECRET_KEY=change-this-to-a-secure-random-64-character-string-for-production
MCP_SECRET_KEY=change-this-to-another-secure-random-32-character-string

# CORS Configuration (for production - restrict to your domain)
CORS_ALLOWED_ORIGINS=https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID
CORS_ALLOW_CREDENTIALS=true

# MCP Server Configuration
MCP_SERVER_PORT=8001
BACKEND_API_KEY=optional-api-key-for-backend-communication
MAX_CONCURRENT_REQUESTS=10
MAX_CONTEXT_LENGTH=4096
REQUEST_TIMEOUT_SECONDS=120

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.com

# Optional: SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem